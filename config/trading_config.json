{
  "trading": {
    "default_symbols": ["EURUSD", "GBPUSD", "USDJPY", "AUDUSD", "USDCAD"],
    "primary_symbol": "EURUSD",
    "timeframes": ["M5", "M15", "H1", "H4", "D1"],
    "default_timeframe": "H1",
    "lot_sizes": {
      "minimum": 0.01,
      "default": 0.1,
      "maximum": 1.0
    },
    "risk_management": {
      "max_drawdown_percent": 5.0,
      "max_trades_per_day": 10,
      "position_size_percent": 2.0
    }
  },
  "fvg": {
    "detection": {
      "min_gap_size": 0.0001,
      "max_gap_size": 0.005,
      "min_body_ratio": 0.7,
      "validation_enabled": true,
      "real_time_mode": true
    },
    "quality": {
      "min_quality_score": 0.6,
      "exceptional_size_pips": 15.0,
      "large_size_pips": 10.0,
      "medium_size_pips": 5.0
    },
    "confluence": {
      "min_strength": 6.0,
      "high_strength": 8.0,
      "max_timeframe_distance": 2
    }
  },
  "order_execution": {
    "enhanced": {
      "enabled": true,
      "fvg_based_limits": true,
      "dynamic_sl_tp": true,
      "confidence_threshold": 0.7
    },
    "traditional": {
      "enabled": true,
      "fallback_mode": true,
      "market_orders": true,
      "min_confidence": 0.6
    },
    "limits": {
      "max_slippage_pips": 3.0,
      "max_spread_pips": 2.0,
      "min_distance_pips": 1.0
    }
  },
  "sessions": {
    "sydney": {
      "start": "21:00",
      "end": "06:00",
      "timezone": "UTC"
    },
    "tokyo": {
      "start": "00:00", 
      "end": "09:00",
      "timezone": "UTC"
    },
    "london": {
      "start": "08:00",
      "end": "17:00", 
      "timezone": "UTC"
    },
    "new_york": {
      "start": "13:00",
      "end": "22:00",
      "timezone": "UTC"
    }
  },
  "market_trends": {
    "bullish_threshold": 0.7,
    "bearish_threshold": -0.7,
    "neutral_range": [-0.3, 0.3],
    "strong_trend_threshold": 0.8
  },
  "alerts": {
    "system": {
      "max_alerts_per_minute": 15,
      "duplicate_suppression_minutes": 3,
      "min_priority": "MEDIUM",
      "throttling_enabled": true,
      "history_max_size": 500
    },
    "production": {
      "enabled_types": ["NEW_FVG", "CONFLUENCE", "LARGE_FVG", "SYSTEM_ERROR"],
      "min_fvg_size_pips": 3.0,
      "min_confluence_strength": 7.0
    },
    "development": {
      "enabled_types": ["NEW_FVG", "CONFLUENCE", "LARGE_FVG", "MARKET_BIAS", "SESSION_CONCENTRATION", "FVG_FILLED", "SYSTEM_ERROR"],
      "min_fvg_size_pips": 1.0,
      "min_confluence_strength": 5.0
    }
  },
  "system": {
    "version": "2.0.0",
    "environment": "production",
    "debug_mode": false,
    "performance_monitoring": true,
    "auto_cleanup_days": 30,
    "max_log_file_size_mb": 10,
    "update_intervals": {
      "market_data": 1.0,
      "strategy_engine": 5.0,
      "analytics": 10.0,
      "health_check": 60.0
    }
  },
  "paths": {
    "data_directory": "data",
    "logs_directory": "logs", 
    "backup_directory": "backup",
    "ml_database": "logs/analytics/fvg_ml_database.db",
    "alerts_log": "logs/fvg_alerts.log"
  },
  "database": {
    "cleanup_old_records_days": 7,
    "max_records_per_symbol": 1000,
    "backup_before_cleanup": true
  },
  "networking": {
    "timeouts": {
      "mt5_connection": 30.0,
      "webhook_request": 10.0,
      "email_send": 30.0
    },
    "retry_attempts": {
      "mt5_operations": 3,
      "webhook_send": 2,
      "email_send": 2
    }
  }
}
